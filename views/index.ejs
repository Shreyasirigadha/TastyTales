  <!-- Add this inside the <section id="search"> ... </section> in your index.ejs file -->
<section id="search">
  <h2>Search Recipes</h2>

  <form action="/" method="GET" id="searchForm">
      <input type="text" id="searchInput" name="search" placeholder="Search for recipes...">
      <button type="submit" href="/views/search_results.ejs">Search</button>
  </form>

<!-- Update the search results section in your index.ejs file -->
<div id="searchResultsContainer">
  <% if (searchQuery) { %>
    <h2>Search Results for "<%= searchQuery %>"</h2>
    <% if (recipes.length === 0) { %>
      <p>No results found.</p>
    <% } else { %>
      <ul>
        <% recipes.forEach(recipe => { %>
          <li>
            <h3><%= recipe.title %></h3>
            <p><strong>Ingredients:</strong> <%= recipe.ingredients %></p>
            <p><strong>Procedure:</strong> <%= recipe.procedure %></p>
            <p><strong>Tags:</strong> <%= recipe.tags.join(', ') %></p>
            <form action="/delete/<%= recipe._id %>" method="POST">
              <button type="submit">Delete Recipe</button>
            </form>
            <a href="/view-recipe/<%= recipe._id %>">View Recipe</a>
          </li>
        <% }); %>
      </ul>
    <% } %>
  <% } %>
</div>

  

  
<script defer src="search.js" data-recipes="<%- JSON.stringify(recipes) %>"></script>

<!-- Add this inside the <section id="ingredient-selection"> ... </section> in your index.ejs file -->
<section id="ingredient-selection">
    <h2>Select Ingredients</h2>
    <form id="ingredientForm">
      <!-- List of checkboxes for ingredients -->
      <label><input type="checkbox" name="ingredient" value="chicken"> chicken</label>
      <label><input type="checkbox" name="ingredient" value="eggs"> eggs</label>
      <!-- Add more checkboxes for each ingredient -->
  
      <button type="submit">Search Recipes</button>
    </form>
  </section>

  <style>
    ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }
  
    li {
      display: inline-block;
      margin-right: 5px;
    }
  
    button {
      /* Add any additional styling you want for the buttons */
      padding: 5px 10px;
    }
  </style>
  
  <h2>Tags:</h2>
  <ul>
    <% recipes.forEach(recipe => { %>
      <% recipe.tags.forEach(tag => { %>
        <li>
          <form action="/search-by-tag/<%= tag %>" method="GET">
            <button type="submit" name="tag" value="<%= tag %>"><%= tag %></button>
          </form>
        </li>
      <% }); %>
    <% }); %>
  </ul>
  

  



